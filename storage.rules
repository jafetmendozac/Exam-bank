rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Permitir lectura de exámenes aprobados a todos los usuarios autenticados
    match /exams/{userId}/{fileName} {
      allow read: if request.auth != null;
      // Permitir escritura solo al propietario del examen
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Bloquear todo lo demás
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
