rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Estructura antigua: exams/{userId}/{fileName} (compatibilidad)
    match /exams/{userId}/{fileName} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Nueva estructura: exams/unidad/seccion/año/curso/{fileName}
    // Permitir lectura a todos los usuarios autenticados
    // Permitir escritura a todos los usuarios autenticados (se valida en el servicio)
    match /exams/{unidad}/{seccion}/{año}/{curso}/{fileName} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    
    // Bloquear todo lo demás
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
